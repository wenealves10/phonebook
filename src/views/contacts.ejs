<%- include('includes/head.ejs') %> 
<%- include('includes/contactsnavbar.ejs') %> 

    <div class="container">
        <div class="row">
            <div class="col-lg-2"></div>
            <div class="col-lg-8 my-3">
                <h1 class="text-center text-success">
                      Contacts
                </h1>
                <p class="lead text-center">
                    create your contacts below
                </p>
             <%- include('includes/messages.ejs') %> 
             <form action="/contacts/register" method="POST" id="Contacts">
                <!-- csrf -->
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="form-group">
                  <label for="name">Name</label>
                  <input type="text" required name="name" class="form-control" id="name" placeholder="name of contacts">
                </div>
                <div class="form-group">
                  <label for="email">E-mail</label>
                  <input type="email" required name="email" class="form-control" id="email" placeholder="type your email">
                </div>
                <div class="form-group">
                    <label for="phone">Phone</label>
                    <input type="tel" name="phone" required class="form-control" id="phone" placeholder="type your phone">
                  </div>
                <button type="submit" id="register" class="btn btn-success w-100">Salve</button>
              </form>
            </div>
            <div class="col-lg-2"></div>
        </div>
    </div>

    
    
<%- include('includes/footer.ejs') %> 